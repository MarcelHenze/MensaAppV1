<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcorners"
            android:padding="1dp" >

            <TextView
                android:id="@+id/vorspeisenTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Vorspeisen"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/vorspeisen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vorspeisenTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorners"
            android:padding="1dp" >

            <TextView
                android:id="@+id/hauptspeisenTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Hauptspeisen"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/hauptspeisen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hauptspeisenTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorners"
            android:padding="1dp" >

            <TextView
                android:id="@+id/nachspeisenTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedcornersonlytop"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Nachspeisen"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/nachspeisen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nachspeisenTitel"
                android:background="@drawable/roundedcornersonlybottom"
                android:orientation="vertical"
                android:padding="10dp" >
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>